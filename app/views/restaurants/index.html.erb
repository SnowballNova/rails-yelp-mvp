<div class="container my-5">
  <h1 class="mb-4 text-center text-primary display-4">All Restaurants</h1>

  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-lg rounded-3">
          <img src="https://via.placeholder.com/300" class="card-img-top" alt="<%= restaurant.name %>">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title text-primary mb-3"><%= restaurant.name %></h5>
            <p class="text-secondary mb-1"><strong>Address:</strong> <%= restaurant.address %></p>
            <p class="text-secondary mb-3"><strong>Category:</strong> <%= restaurant.category %></p>
            <div class="mt-auto">
              <%= link_to "View Details", restaurant_path(restaurant), class: "btn btn-outline-primary btn-lg w-100" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-4 text-center">
    <%= link_to "+ Add new Restaurant", new_restaurant_path, class: "btn btn-success btn-lg" %>
  </div>
</div>
