<h3>Add a Review</h3>

<%= simple_form_for [ @restaurant, @review ] do |form| %>
  <div class="form-group">
    <%= form.label :content, "Review" %>
    <%= form.text_area :content, class: "form-control", rows: 3 %>
  </div>

  <div class="form-group">
    <%= form.label :rating, "Rating (0-5)" %>
    <%= form.number_field :rating, class: "form-control", min: 0, max: 5 %>
  </div>

  <% if @review.errors.any? %>
    <div class="alert alert-danger mt-2">
      <h5>There were errors with your submission:</h5>
      <ul>
        <% @review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.submit "Submit Review", class: "btn btn-primary mt-2" %>
<% end %>
